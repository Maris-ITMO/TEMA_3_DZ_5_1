<Window x:Class="TEMA_3_DZ_5_1.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TEMA_3_DZ_5_1"
             mc:Ignorable="d" 
             Height="250" Width="300"
             Title="Количество элементов модели">
    <StackPanel>
        <Label Content ="Количество труб"
               Margin="5"/>
        <Button Content="Трубы" Command="{Binding SelectPipeCommand}"
                Margin="5"/>
        <Label Content ="Объем стен"
               Margin="5"/>
        <Button Content="Стены" Command="{Binding SelectWallCommand}"
                Margin="5"/>
        <Label Content ="Количество дверей"
               Margin="5"/>
        <Button Content="Двери" Command="{Binding SelectDoorCommand}"
                Margin="5"/>
    </StackPanel>
</Window>
           